<?xml version="1.0"?>
<block>
  <name>TotalFreqShift</name>
  <key>Test_TotalFreqShift</key>
  <category>Test</category>
  <import>import Test</import>
  <make>Test.TotalFreqShift($shift_freq, $systemfs, $direction)</make>
  <callback> set_shift_freq($shift_freq) </callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Direction</name>
    <key>direction</key>
    <type>int</type>
  </param>
  <param>
    <name>Shift Amount</name>
    <key>shift_freq</key>
    <type>float</type>
  </param>
  <param>
    <name>Sampling Freq</name>
    <key>systemfs</key>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
